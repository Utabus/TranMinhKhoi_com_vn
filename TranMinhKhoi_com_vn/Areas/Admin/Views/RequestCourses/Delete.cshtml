@model TranMinhKhoi_com_vn.Entities.RequestCourse

@{
    ViewData["Title"] = "Xóa yêu cầu khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0"><i class="bi bi-trash"></i> Xác nhận xóa yêu cầu khóa học</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning text-center mb-4">
                    <strong>Bạn có chắc chắn muốn xóa yêu cầu này?</strong>
                </div>
                <dl class="row mb-4">
                    <dt class="col-sm-4">Cdt</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cdt)</dd>
                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                    <dt class="col-sm-4">Tài khoản</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Account.Email)</dd>
                    <dt class="col-sm-4">Khóa học</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.Id)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <input type="submit" value="Xóa" class="btn btn-danger btn-lg fw-bold" />
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
