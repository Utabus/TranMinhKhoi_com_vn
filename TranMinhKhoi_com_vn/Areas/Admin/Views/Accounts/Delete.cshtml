@model TranMinhKhoi_com_vn.Entities.Account

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center text-danger">Xóa tài khoản</h1>
<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <div class="alert alert-danger text-center fw-bold mb-4">
                    Bạn có chắc chắn muốn xóa tài khoản này không?
                </div>
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.Avartar)) {
                        <img src="@Url.Content("~/contents/Images/User/" + Model.Avartar)" alt="Avatar" class="rounded-circle border" style="width: 100px; height: 100px; object-fit: cover;">
                    } else {
                        <span class="text-muted">(Không có ảnh đại diện)</span>
                    }
                </div>
                <dl class="row">
                    <dt class="col-sm-4">Tên đăng nhập</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    <dt class="col-sm-4">Họ tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                    <dt class="col-sm-4">Ngày sinh</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Birthday)</dd>
                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">@(Model.Status == 1 ? "Hoạt động" : "Ngừng hoạt động")</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
