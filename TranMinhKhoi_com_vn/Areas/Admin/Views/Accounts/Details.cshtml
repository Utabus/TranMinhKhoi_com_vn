@model TranMinhKhoi_com_vn.Entities.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center">Chi tiết tài khoản</h1>
<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.Avartar)) {
                        <img src="@Url.Content("~/contents/Images/User/" + Model.Avartar)" alt="Avatar" class="rounded-circle border" style="width: 120px; height: 120px; object-fit: cover;">
                    } else {
                        <span class="text-muted">(Không có ảnh đại diện)</span>
                    }
                </div>
                <dl class="row">
                    <dt class="col-sm-4">Tên đăng nhập</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    <dt class="col-sm-4">Họ tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                    <dt class="col-sm-4">Số dư</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Coin)</dd>
                    <dt class="col-sm-4">Ngày sinh</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Birthday)</dd>
                    <dt class="col-sm-4">Giới tính</dt>
                    <dd class="col-sm-8">@(Model.Gender == 1 ? "Nam" : "Nữ")</dd>
                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">@(Model.Status == 1 ? "Hoạt động" : "Ngừng hoạt động")</dd>
                    <dt class="col-sm-4">Chuyên ngành</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Major)</dd>
                    <dt class="col-sm-4">Quyền</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Role.Id)</dd>
                </dl>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
