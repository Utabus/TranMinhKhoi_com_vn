@model TranMinhKhoi_com_vn.Entities.Fund

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center">Chi tiết quỹ</h1>
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">
        <div class="card shadow-sm">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tổng tiền</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Total)</dd>
                    <dt class="col-sm-4">Thu/Chi</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.InOut)</dd>
                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cdt)</dd>
                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                    <dt class="col-sm-4">Nội dung</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Content)</dd>
                    <dt class="col-sm-4">Tài khoản</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Account.Id)</dd>
                </dl>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
