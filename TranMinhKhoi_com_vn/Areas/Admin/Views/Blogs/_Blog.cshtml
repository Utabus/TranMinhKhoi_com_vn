@model IEnumerable<TranMinhKhoi_com_vn.Entities.Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center">Danh sách bài viết</h1>
<div class="row justify-content-center">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">Bài viết</h4>
                    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Thêm mới</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Image)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Type)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Cdt)</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Image))
                                        {
                                            <img src="~/contents/Images/Blog/@item.Image" alt="Ảnh" class="rounded border" style="width: 60px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <span class="text-muted">(Không có)</span>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Cdt)</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1"><i class="bi bi-info-circle"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
