@model TranMinhKhoi_com_vn.Entities.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center">Chi tiết khoá học</h1>
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-9">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.Image)) {
                        <img src="@Model.Image" alt="Ảnh" class="rounded border" style="width: 120px; height: 80px; object-fit: cover;">
                    } else {
                        <span class="text-muted">(Không có ảnh)</span>
                    }
                </div>
                <dl class="row">
                    <dt class="col-sm-4">Tiêu đề</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>
                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    <dt class="col-sm-4">Link</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Link)</dd>
                    <dt class="col-sm-4">Nội dung</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Content)</dd>
                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cdt)</dd>
                    <dt class="col-sm-4">Donat</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Donat)</dd> 
                    <dt class="col-sm-4">Iframe</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Iframe)</dd>
                </dl>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
