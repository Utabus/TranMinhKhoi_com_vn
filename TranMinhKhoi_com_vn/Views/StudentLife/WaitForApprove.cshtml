@{
    ViewData["Title"] = "Đợi Admin duyệt";
}
<style>
    body {
        text-align: center;
        background: linear-gradient(120deg,#f7fafd 60%,#e0f7fa 100%);
    }
    .wait-approve-card {
        max-width: 520px;
        width: 100%;
        border-radius: 22px;
        box-shadow: 0 8px 32px rgba(0,152,166,0.12);
        background: #fff;
        margin: 0 auto;
    }
    .wait-approve-icon {
        background: linear-gradient(90deg,#0098a6 60%,#00b3b3 100%);
        border-radius: 50%;
        padding: 22px;
        display: inline-block;
        margin-bottom: 18px;
        box-shadow: 0 2px 12px rgba(0,152,166,0.10);
    }
    .wait-approve-title {
        color: #0098a6;
        font-weight: 700;
        margin-bottom: 10px;
        font-size: 1.5rem;
    }
    .wait-approve-desc {
        color: #444;
        font-size: 1.08rem;
        margin-bottom: 28px;
    }
    .wait-approve-btn {
        font-size: 1.08rem;
        padding: 10px 36px;
        border-radius: 24px;
        font-weight: 600;
        box-shadow: 0 2px 12px rgba(0,152,166,0.10);
    }
</style>
<div class="container custom-mt" style="margin-top: 160px;">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 40vh;">
        <div class="wait-approve-card">
            <div class="card-body text-center py-5">
                <span class="wait-approve-icon">
                    <i class="bi bi-hourglass-split" style="font-size:2.5rem; color:#fff;"></i>
                </span>
                <div class="wait-approve-title">Yêu cầu của bạn đã được ghi nhận!</div>
                <div class="wait-approve-desc">
                    Vui lòng đợi Admin duyệt khóa học.<br>
                    Bạn sẽ nhận được thông báo qua email khi được duyệt.
                </div>
                <a href="/StudentLife/Index" class="btn btn-info wait-approve-btn">
                    <i class="bi bi-arrow-left"></i> Quay về trang trước
                </a>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">